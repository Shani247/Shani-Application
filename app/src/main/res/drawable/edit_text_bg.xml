<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- צבע הרקע של השדה -->
    <solid android:color="#F0F0F0"/>

    <!-- קו גבול -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/>

    <!-- פינות מעוגלות -->
    <corners android:radius="8dp"/>

    <!-- רווח פנימי -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
